<h1>Add A New Pet</h1>

<section>
  <%= form_tag "/shelters/#{@shelter.id}/pets" do %>
    <%= label_tag :image %>
    <%= text_field_tag :image %>

    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= label_tag :description %>
    <%= text_field_tag :description %>

    <%= label_tag :approximate_age %>
    <%= text_field_tag :approximate_age %>

    <%= label_tag :sex %>
    <%= text_field_tag :sex %>

    <%= submit_tag "Submit"%>
  <% end %>
</section>
