<a href="/">Home</a>

<section>
  <h1>All Pets</h1>
</section>

<section>
  <% @pets.each do |pet| %>
    <%= image_tag pet.image, style: "max-height: 200px; max-width: 200px" %>
    <section>
      <h3><%= link_to pet.name, "/pets/#{pet.id}" %><h3>
    </section>
    <p><%= pet.approximate_age %></p>
    <p><%= pet.sex %></p>
    <p><%= link_to pet.shelter.name, "/shelters/#{pet.shelter_id}" %></p>
    <% end %>
</section>
