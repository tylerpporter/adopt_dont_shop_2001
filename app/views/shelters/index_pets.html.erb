<section>
  <h1>All Pets</h1>
</section>

<section>
  <% @shelter.pets.each do |pet| %>
    <section id='pet-<%= pet.id %>'>
      <%= image_tag pet.image, style: "max-height: 200px; max-width: 200px" %>
      <h3><%= link_to pet.name, "/pets/#{pet.id}" %></h3>
      <p><%= pet.approximate_age %></p>
      <p><%= pet.sex %></p>
      <%= link_to "Edit", "/pets/#{pet.id}/edit" %>
      <%= link_to "Delete", "/pets/#{pet.id}", method: :delete %>
    </section>
    <% end %>
</section>

<section>
    <%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>
</section>
